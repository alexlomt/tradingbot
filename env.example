# Network Configuration
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
WS_ENDPOINT=wss://api.mainnet-beta.solana.com
COMMITMENT=confirmed
CLUSTER=mainnet-beta

# Application
APP_VERSION=1.0.0
APP_PORT=3000
NODE_ENV=development

# Wallet Configuration
WALLET_PATH=/path/to/wallet.json
WALLET_PUBLIC_KEY=your_public_key_here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=tradingbot

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# Trading Parameters
TRADING_API_KEY=your-api-key
TRADING_API_SECRET=your-api-secret
TRADING_DEFAULT_PAIR=BTC/USD
TRADING_ORDER_SIZE=0.01
TRADING_MAX_OPEN_POSITIONS=3
MAX_CONCURRENT_TRADES=5
MAX_DAILY_TRADES=50
MAX_POSITION_SIZE=1000000000
DAILY_VOLUME_LIMIT=10000000000
DEFAULT_SLIPPAGE=1.0
MIN_LIQUIDITY_USD=100000000
EMERGENCY_CLOSE_ALL=false

# Risk Management
TAKE_PROFIT=5.0
STOP_LOSS=2.5
MAX_DRAWDOWN=10.0
MAX_LEVERAGE=2.0
COOLDOWN_PERIOD=300000

# Transaction Settings
USE_WARP_TRANSACTIONS=true
USE_JITO_TRANSACTIONS=true
USE_CUSTOM_FEE=true
CUSTOM_FEE=10000
COMPUTE_UNIT_LIMIT=200000
COMPUTE_UNIT_PRICE=1000
SKIP_PREFLIGHT=false
MAX_RETRIES=3
MAX_TIMEOUT=30000

# Market Data Settings
MARKET_UPDATE_INTERVAL=1000
PRICE_UPDATE_INTERVAL=500
LIQUIDITY_CHECK_INTERVAL=5000
VOLATILITY_WINDOW=86400000

# Snipe List Configuration
SNIPE_LIST_ENABLED=true
SNIPE_LIST_MAX_ENTRIES=1000
SNIPE_LIST_AUTO_REMOVE_DAYS=30
SNIPE_LIST_PERSIST=true
SNIPE_LIST_SYNC_INTERVAL=300000
SNIPE_LIST_BACKUP_INTERVAL=3600000

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=86400
CACHE_MAX_SIZE=10000
CACHE_UPDATE_INTERVAL=300000

# Logging and Monitoring
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_PATH=./logs
SENTRY_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
AUTOMATIC_TRADING_ENABLED=true
RISK_MANAGEMENT_ENABLED=true
WARP_INTEGRATION_ENABLED=true
JITO_INTEGRATION_ENABLED=true
METRICS_DASHBOARD_ENABLED=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
KMS_MASTER_KEY_ID=your-kms-key-id
KMS_KEY_ALIAS=trading-bot-master-key
BACKUP_ENCRYPTION_KEY=your-backup-key

# Environment
NODE_ENV=production

# Security Configuration
KEY_ROTATION_INTERVAL=7776000000 # 90 days in milliseconds
KEY_CACHE_DURATION=86400000 # 24 hours in milliseconds
